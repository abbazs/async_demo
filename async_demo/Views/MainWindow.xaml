<Window x:Class="async.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:async.ViewModels"
        mc:Ignorable="d"
        Title="Asyn Demo App" 
        Height="600" 
        Width="900">
    <Window.Resources>
        <vm:NormalViewModel x:Key="nvm"/>
        <vm:AsyncViewModel x:Key="avm"/>
        <vm:AsyncParallelViewModel x:Key="pavm"/>
        <vm:ParallelForeachViewModel x:Key="pfvm"/>
        <vm:AsyncParallelForeachViewModel x:Key="apfvm"/>
    </Window.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto">
        <DockPanel LastChildFill="False"
                   HorizontalAlignment="Center">
            <ContentPresenter Content="{StaticResource nvm}"
                              ContentTemplate="{StaticResource ViewTemplate}"
                              DockPanel.Dock="Left"
                              />
            <ContentPresenter Content="{StaticResource avm}"
                              ContentTemplate="{StaticResource ViewTemplate}"
                              DockPanel.Dock="Left"
                              />
            <ContentPresenter Content="{StaticResource pavm}"
                              ContentTemplate="{StaticResource ViewTemplate}"
                              DockPanel.Dock="Left"
                              />        
            <ContentPresenter Content="{StaticResource pfvm}"
                              ContentTemplate="{StaticResource ViewTemplate}"
                              DockPanel.Dock="Left"
                              />        
            <ContentPresenter Content="{StaticResource apfvm}"
                              ContentTemplate="{StaticResource ViewTemplate}"
                              DockPanel.Dock="Left"
                              />
        </DockPanel>
    </ScrollViewer>
</Window>
